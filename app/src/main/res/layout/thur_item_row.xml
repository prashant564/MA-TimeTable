<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/navbar"
        android:paddingHorizontal="12dp"
        android:paddingVertical="6dp">


    <TextView
            android:id="@+id/textView_type_thur"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:text="TextView"
            android:textColor="@color/theme_text"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/textView_subject_thur"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_marginTop="4dp"
            android:maxWidth="100dp"
            android:text="TextView"
            android:textColor="@color/theme_text"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textView_type_thur"
            app:layout_constraintTop_toBottomOf="@+id/textView_type_thur" />

    <TextView
            android:id="@+id/textView_time_thur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="TextView"
            android:textColor="@color/theme_text"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/textView_subject_thur"
            app:layout_constraintTop_toBottomOf="@+id/textView_subject_thur" />

    <TextView
            android:id="@+id/textView_faculty_thur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="TextView"
            android:textColor="@color/theme_text"
            android:textSize="15sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView_time_thur"
            app:layout_constraintStart_toEndOf="@+id/textView_time_thur" />

    <TextView
            android:id="@+id/textView_venue_thur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="TextView"
            android:textColor="@color/theme_text"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView_faculty_thur"
            app:layout_constraintStart_toEndOf="@+id/textView_faculty_thur" />
</androidx.constraintlayout.widget.ConstraintLayout>